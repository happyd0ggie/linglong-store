{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "linglong-store",
  "version": "2.0.1",
  "identifier": "com.dongpl.linglong-store.v2",
  "build": {
    "beforeDevCommand": "pnpm tauri:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm tauri:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "玲珑应用商店",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [],
        "desktopTemplate": "desktop.template"
      },
      "rpm": {
        "depends": [],
        "desktopTemplate": "desktop.template"
      }
    },
    "resources": [],
    "externalBin": []
  }
}
